rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read their own stories
    match /users/{userId}/stories/{storyId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }

    // Users can only read their own likes
    match /users/{userId}/likes/{likeId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }

    // Timeline is public content â€” readable by anyone
    match /timeline/{storyId} {
      allow read: if true;
      allow write: if false;
    }

    // Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
